@model MyChartASPnetMVC.Models.UserData
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Plotting</title>
</head>
<body>
    <div>
        <h3>Input the function coefficients, please:</h3>
        <form method="post" action="" target="_blank">
            @Html.ValidationSummary(true)
            <table>
                <tr>
                    <td><p>Function: y =</p></td>
                    <td><input type="text" size="1" name="a" /> </td>
                    <td><p> * x^2 + </p></td>
                    <td><input type="text" size="1" name="b" /> </td>
                    <td><p> * x + </p></td>
                    <td><input type="text" size="1" name="c" /> </td>
                </tr>
                <tr>
                    <td><p>Step: </p></td>
                    <td><input type="text" size="1" name="step" /> </td>
                    @Html.ValidationMessageFor(m => m.step)
                </tr>
                <tr>
                    <td><p>From: </p></td>
                    <td><input type="text" size="1" name="RangeFrom" /> </td>
                    @Html.ValidationMessageFor(m => m.RangeFrom)
                    <td><p>to: </p></td>
                    <td><input type="text" size="1" name="RangeTo" /> </td>
                    @Html.ValidationMessageFor(m => m.RangeTo)
                </tr>
                <tr><td></td><td></td><td><input type="submit" value="Plot" /> </td> <td></td><td></td><td></td></tr>
            </table>
        </form>
    </div>
    <div id="content"></div>
    <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react/16.8.0/umd/react.development.js"></script>
    <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.8.0/umd/react-dom.development.js"></script>
    <script src='@Url.Content("~/Scripts/app.jsx")'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
